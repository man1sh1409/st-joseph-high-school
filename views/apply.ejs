<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../static/css/form.css">
    
</head>
<body>
    <%- include('./navbar'); -%>
    <section id="form-sec">
        <div class="big-box">
           <div class="apply-container">
            
            <div class="box">
                <form  id="myform" action="/apply" method="post">
                    <div class="inputag"  id="field-1">
                        <input type="text" name="firstName" id="firstName" placeholder=" first name" required>
                        <input type="text" name="middleName" id="middleName" placeholder=" middle name">
                        <input type="text" name="lastName" id="lastName" placeholder=" last name" required>
                    </div>
                    <div class="inputag" id="field-3">
                        <input type="text" name="fatherName" id="clgid-field" placeholder="father Name" required >
                        <input type="text" name="motherName" id="email-field"  placeholder="mother name"  required>
                        
                    </div>
                    <div class="inputag" id="field-2">
                       <input type="number" name="mobile" id="" placeholder="mobile number" required>
                       <input type="email" name="email" id="" placeholder="email id" style="text-transform: lowercase;" required>
                       <input type="number" name="aadhar" id="city" placeholder="aadhar number" required>
                    </div>
                    <div class="inputag" id="field-4">
                        <input type="date" name="DOB" id="pass-field" placeholder="date od birth" style="text-transform:none" required>
                        <input type="textarea" name="address" id="cnfpass-field" placeholder="address" required>
                    </div>
                    <div class="inputag" id="field-3">
                    
                        <select name="Qualification" id="gender-field" selected="Qualification">
                            <option value="">Qualification</option>
                            <option value="preNursery">pre Nursery</option>
                            <option value="Nursery">Nursery</option>
                            <option value="1 std">1 STD</option>
                            <option value="2 std">2 STD</option>
                            <option value="3 std">3 STD</option>
                            <option value="4 std">4 STD</option>
                            <option value="5 std">5 STD</option>
                            <option value="6 std">6 STD</option>
                            <option value="7 std">7 STD</option>
                            <option value="8 std">8 STD</option>
                            <option value="9 std">9 STD</option>
                        </select>
                        <select name="gender" id="gender-field" selected="gender">
                            <option value="">Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Custom">Custom</option>
                        </select>
                        <select name="disablity" id="phydis-field" selected="">
                            <option value="">Physical Disability</option>
                            <option value="YES">YES</option>
                            <option value="NO">NO</option>
                        </select>
                    </div>
                    <button class="btn">submit</button>
                    
                </form>
            </div>
         </div> 
        </div>
        
    </section>
    <%- include("./footer.ejs"); %>
   <!--
      <script src="../static/javascript/route.js"></script>
   --> 
</body>
</html>